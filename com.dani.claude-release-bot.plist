<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.dani.claude-release-bot</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/dani/.nvm/versions/node/v24.11.1/bin/npx</string>
        <string>tsx</string>
        <string>/Users/dani/Documents/GitHub/claude-release-bot/src/index.ts</string>
        <string>--once</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/dani/Documents/GitHub/claude-release-bot</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/dani/.nvm/versions/node/v24.11.1/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <!-- Run at 1, 5, 9, 13, 17, 21 (every 4 hours) -->
    <key>StartCalendarInterval</key>
    <array>
        <dict><key>Hour</key><integer>1</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>5</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>9</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>13</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>17</integer><key>Minute</key><integer>0</integer></dict>
        <dict><key>Hour</key><integer>21</integer><key>Minute</key><integer>0</integer></dict>
    </array>

    <!-- Run immediately when loaded -->
    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/dani/Documents/GitHub/claude-release-bot/logs/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/dani/Documents/GitHub/claude-release-bot/logs/launchd-stderr.log</string>
</dict>
</plist>
